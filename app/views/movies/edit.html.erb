<p id="notice"></p>
<div class = "container px-5 px-sm-0">
 <div class = "row">

   <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>Editing Movie</h1>

     <% if @movie.errors.any? %>
      <div id = "error_explantion">
      <h3><%= pluralize(@movie.errors.count, "error") %> prohibited this obj from being saved:</h3>
       <ul>
        <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
       </ul>
      </div>
    <% end %>
     <%= form_with model: @movie,url: movie_path(@movie), method: :patch do |f| %>
      <div class = "form-group">
       <label for="movie_title">Title</label>
       <%= f.text_field :title, class: "form-control movie_title" %>
      </div>

      <div class = "form-group">
       <label for="movie_opinion">Opinion</label>
       <%= f.text_area :body, class: "form-control movie_body" %>
      </div>

      <div class = "form-group">
       <%= f.submit 'Update Movie', class: "btn btn-success" %>
      </div>
     <% end %>
     <%= link_to 'Show',movie_path(@movie) %>|
     <%= link_to 'Back',movies_path %>

   </div>
 </div>
</div>