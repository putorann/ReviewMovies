<p id="notice"></p>
<div class = "container px-5 px-sm-0">
  <% if @movie.errors.any? %>
   <div id = "error_explantion">
    <h3><%= pluralize(@movie.errors.count, "error") %> prohibited this obj from being saved:</h3>
     <ul>
      <% @movie.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
     </ul>
   </div>
  <% end %>

  <div class = "row">
   <%= render 'movies/movie', user: @user, movie: @movie %>
     <div class = "col-md-8 offset-md-1">
      <h2>Movies</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
       </thead>

      <tbody>
       <% @movies.each do |movie| %>
        <tr>
         <td>
          <%= link_to (movie.user) do %>
          <%= image_tag movie.user.get_profile_image(100,100) %>
       <% end %>
         </td>
         <td><%=link_to movie.title, movie_path(movie) %></td>
         <td><%= movie.body %></td>
        </tr>
       <% end %>
      </tbody>
      </table>
     </div>
 </div>
</div>